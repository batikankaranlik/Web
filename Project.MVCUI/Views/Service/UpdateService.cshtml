@model ServiceVM

@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    genislik {
        width: 300px;
    }
</style>
@using (Html.BeginForm("UpdateService", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Service.ID)
    <div class="row m-5">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Servis Güncelleme
                </header>
                <div class="form-group">
                    <label class="col-sm-2">Resim Seçiniz</label>
                    <div class="col-sm-10">
                        <input type="file" name="resim" class="form-control" genislik />
                    </div>
                </div>
                <br /><br />
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2">service Başlık</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Service.Title, new { @class = "form-control genislik" })
                            @Html.ValidationMessageFor(x => x.Service.Title)
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2">Sevice Açıklaması</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Service.Description, new { @class = "form-control genislik" })
                            @Html.ValidationMessageFor(x => x.Service.Description)
                        </div>
                    </div>


                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2">Güncelle</label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Güncelle
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

}
