@model ProductVM
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    genislik {
        width: 300px;
    }
</style>
@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row m-5">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading m-5">
                    Ürün ekle
                </header>
                <div class="form-group">
                    <label class="col-sm-2">Resim Seçiniz</label>
                    <div class="col-sm-10">
                        <input type="file" name="resim" class="form-control" genislik />
                    </div>
                </div>
                <br /><br />
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2">Ürün Adı</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.Name, new { @class = "form-control genislik" })
                            @Html.ValidationMessageFor(x => x.Product.Name)
                        </div>
                    </div>
                    <br />
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-2">Ürün Başlık</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Product.SubTitle, new { @class = "form-control genislik" })
                                @Html.ValidationMessageFor(x => x.Product.SubTitle)
                            </div>
                        </div>
                        <br />
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="col-sm-2">Ürün Açıklama</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Product.Description, new { @class = "form-control genislik" })
                                    @Html.ValidationMessageFor(x => x.Product.Description)
                                </div>
                            </div>
                            <br />
                            <div class="panel-body">
                                <div class="form-group">
                                    <label class="col-sm-2">Ürün Kategori</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x => x.Product.Category, new { @class = "form-control genislik" })
                                        @Html.ValidationMessageFor(x => x.Product.Category)
                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-sm-10">
                                        <button class="btn btn-primary">
                                            Ürün  ekle
                                        </button>
                                    </div>

            </section>
        </div>
    </div>
}


