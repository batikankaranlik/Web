@model ProductVM
@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card m-5">

    <h5 class="card-header">Ürünler</h5>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>resim</th>
                        <th>Ürün ismi</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Kategori</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product item in @Model.Products)
                    {
                    <tr>
                        <td><img width="50" height="50" title="@item.Name" src="@item.ImageUrl" /></td>
                        <td>@item.Name</td>
                        <td>@item.SubTitle</td>
                        <td>@item.Description</td>
                        <td>@item.Category</td>
                        
                        <td><span class="badge bg-label-primary me-1">@item.Status</span></td>
                        <td>
                            <div class="dropdown">
                                <button type="button"
                                        class="btn p-0 dropdown-toggle hide-arrow"
                                        data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="javascript:void(0);"> @Html.ActionLink("Update","UpdateProduct", new { id = item.ID }, new { @class = "bx bx-edit-alt me-1 " })</a>
                                    <a class="dropdown-item" href="javascript:void(0);"> @Html.ActionLink("Delete", "DeleteProduct", new { id = item.ID }, new { @class = "bx bx-trash me-1 " })</a>
                                </div>
                            </div>
                        </td>

                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

