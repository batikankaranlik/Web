@model ProductVM
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    genislik {
        width: 300px;
    }
</style>
@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Product.ID)
    <div class="row m-5">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Ürün Güncelleme
                </header>
                <div class="form-group">
                    <label class="col-sm-2">Resim Seçiniz</label>
                    <div class="col-sm-10">
                        <input type="file" name="resim" class="form-control" genislik />
                    </div>
                </div>
                <br /><br />
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2">Ürün Ad</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.Name, new { @class = "form-control genislik" })
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2">Ürün Başlık</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.SubTitle, new { @class = "form-control genislik" })
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2">Ürün Açıklama</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.Description, new { @class = "form-control genislik" })
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2">Kategori</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.Category, new { @class = "form-control genislik" })
                        </div>
                    </div>
                    <br /><br />

                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2">Güncelle</label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Güncelle
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

}


